{
  "compilerOptions": {
    "baseUrl": "./",

    "sourceMap": true,
    "watch": true,

    "allowSyntheticDefaultImports": true,
    /*"noImplicitAny": true,*/
    "module": "es2022",
    "target": "es2017",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    /*"pretty": true,*/
    "strict": true,
    "declaration": false,
    "lib": [
      "es2021",
      "DOM", 
    ],
  },
   "include": ["./"],
   "exclude": ["node_modules"],
}
